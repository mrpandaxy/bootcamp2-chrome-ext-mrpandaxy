{
  "manifest_version": 3,
  "name": "Motivador Diário",
  "version": "1.0.0",
  "description": "Mostra uma mensagem motivacional no popup.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Motivador Diário",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": ["storage"],
  "host_permissions": [],
  "content_scripts": [],
  "options_page": ""
}
